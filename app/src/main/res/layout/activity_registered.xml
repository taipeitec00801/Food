                <EditText
                    android:id="@+id/etUser"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="200dp"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="20dp"
                    android:hint="User Name"
                    android:paddingLeft="5dp"
                    android:textColor="@color/lgColorText"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="265dp"
                    android:drawableLeft="@drawable/passeordkey"
                    android:drawablePadding="20dp"
                    android:hint="PassWord"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/lgColorText"/>

                <EditText
                    android:id="@+id/cfPassword"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="330dp"
                    android:drawableLeft="@drawable/done"
                    android:drawablePadding="20dp"
                    android:hint="Confirm"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/lgColorText"/>

                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="395dp"
                    android:drawableLeft="@drawable/ic_cake_black_24dp"
                    android:drawablePadding="20dp"
                    android:hint="Birthday"
                    android:paddingLeft="5dp"
                    android:onClick="onDateClick"
                    android:textColor="@color/lgColorText"
                    android:editable="false"/>

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="460dp"
                    android:drawableLeft="@drawable/ic_wc_black_24dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="5dp"
                    android:editable="false">
