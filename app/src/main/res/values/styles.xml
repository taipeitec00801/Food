<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorBody</item>
        <item name="colorCardBody">@color/colorCardBody</item>
        <!-- 切換 Activity動畫 -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!-- hamburger -->
        <item name="colorControlNormal">@color/colorBlack</item>

        <!-- 切換 image -->
        <item name="ivSettingDayNight">@drawable/moon</item>
        <item name="ivUserSetting">@drawable/user_setting_black</item>
        <item name="ivSettingClean">@drawable/clean_black</item>
        <item name="ivSettingLikes">@drawable/likes</item>

        <item name="ivSettingId">@drawable/username_black</item>
        <item name="ivSettingPassword">@drawable/passeordkey_black</item>
        <item name="ivSettingNickname">@drawable/nickname_black</item>
        <item name="ivSettingBirthday">@drawable/ic_cake_black_24dp</item>
        <item name="ivSettingGender">@drawable/ic_wc_black_24dp</item>
        <item name="ivChevronRight">@drawable/ic_chevron_right_black</item>

        <!-- 切換 string -->
        <item name="tvSettingDayNight">@string/settingDayNight</item>
    </style>

    <!--跳脫視窗動畫-->
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <!--A點擊打開B，B的出現動畫-->
        <item name="android:activityOpenEnterAnimation">@transition/next_activity_in</item>
        <!--A點擊打開B，A的消失動畫-->
        <item name="android:activityOpenExitAnimation">@transition/past_activity_out</item>
        <!--B離開回到A，A的出現動畫-->
        <item name="android:activityCloseEnterAnimation">@transition/past_activity_in</item>
        <!--B離開回到A，B的消失動畫-->
        <item name="android:activityCloseExitAnimation">@transition/next_activity_out</item>
    </style>


</resources>
