<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="10dp"
        android:id="@+id/cvPreferencesLeft"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorCardBody"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:id="@+id/ivPreferencesLeft"
                android:src="@drawable/chinese_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPreferencesLeft"
                android:layout_gravity="center"
                android:text="@string/textChineseStyle"
                android:textColor="@color/colorText"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="9dp"
        android:id="@+id/cvPreferencesRight"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorCardBody"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:id="@+id/ivPreferencesRight"
                android:layout_gravity="center"
                android:src="@drawable/western_food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPreferencesRight"
                android:layout_gravity="center"
                android:text="@string/textWesternStyle"
                android:textColor="@color/colorText"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


