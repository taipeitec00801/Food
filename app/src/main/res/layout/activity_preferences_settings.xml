<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pref_rv"
    android:background="?attr/colorBackground"
    tools:context=".Settings.PreferencesSettingsActivity">

    <include
        android:id="@+id/settingsPreferencesToolbar"
        layout="@layout/toolbar" />


    <!--最外一層LinearLayout用來設定兩組cardView的比例-->
    <LinearLayout
        android:id="@+id/llSetting_pref"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/settingsPreferencesToolbar"
        android:orientation="horizontal">
        <!--此層cardView用來設定邊框顏色和動畫可以用Id附著-->
        <android.support.v7.widget.CardView
            android:id="@+id/pref_item_cv_moveL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/colorText">

            <!--第一組主要的cardView-->
            <android.support.v7.widget.CardView
                android:id="@+id/pref_item_Lift_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <!--設定被點擊的水波紋動畫。-->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/pref_item_ripple_L"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="#000000">
                    <!--用來設定ImageView和TextView的比例-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/cardBackgroundColor"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pref_item_Left_iv"
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_height="0dp"
                            android:src="@drawable/cf"
                            android:layout_margin="30dp"
                            android:background="@android:color/transparent"/>

                        <TextView
                            android:id="@+id/pref_item_Left_tv"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:text=""
                            android:textSize="18sp"
                            android:textColor="@android:color/transparent"
                            android:padding="5dp"
                            android:background="#ccffffff"/>

                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/pref_item_cv_moveR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/colorText">

            <!--第二組主要的cardView-->
            <android.support.v7.widget.CardView
                android:id="@+id/pref_item_Right_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/pref_item_ripple_R"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="#000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/cardBackgroundColor"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pref_item_Right_iv"
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_height="0dp"
                            android:src="@drawable/cf"
                            android:layout_margin="30dp"
                            android:background="@android:color/transparent"/>

                        <TextView
                            android:id="@+id/pref_item_Right_tv"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:text=""
                            android:textSize="18sp"
                            android:textColor="@android:color/transparent"
                            android:padding="5dp"
                            android:background="#ccffffff"/>

                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btSetAll"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llSetting_pref"
        android:layout_marginStart="51dp"
        android:background="@drawable/btn_bg"
        android:text="全選"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btSetConfirm"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/llSetting_pref"
        android:layout_marginEnd="44dp"
        android:background="@drawable/btn_bg"
        android:text="完成"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

</RelativeLayout>
