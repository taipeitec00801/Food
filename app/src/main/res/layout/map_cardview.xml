<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/map_cardView"
    android:onClick="animateIntent"
    app:cardCornerRadius="12dp"
    android:transitionName="@string/map_transition_string"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/map_cardview_storeImg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:transitionName="@string/map_transition_string"
            android:scaleType="centerCrop"
            android:src="@drawable/drinks_and_desserts"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_cardView_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="store name"/>


            <TextView
                android:id="@+id/map_cardView_tvstoreinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="store info"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>