<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pref_rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".Settings.PreferencesSettingsActivity">

    <include
        android:id="@+id/settingsPreferencesToolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSetting_pref"
        android:layout_below="@+id/settingsPreferencesToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btSetAll"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llSetting_pref"
            android:layout_marginStart="51dp"
            android:background="@drawable/btn_bg"
            android:text="全選"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btSetConfirm"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/llSetting_pref"
            android:layout_marginEnd="44dp"
            android:background="@drawable/btn_bg"
            android:text="完成"
            android:textColor="@color/colorText"
            android:textSize="18sp" />
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
