<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:id="@+id/menuHeader"
    android:background="@drawable/header_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_nv_User_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_nv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/cv_nv_User_image"
        android:layout_below="@+id/cv_nv_User_image"
        android:text="@string/textGuests"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_nv_User_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_alignStart="@+id/cv_nv_User_image"
        android:layout_below="@+id/tv_nv_nickName"
        android:fontFamily="sans-serif"
        android:text="@string/textDefaultAccount"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />


</RelativeLayout>
