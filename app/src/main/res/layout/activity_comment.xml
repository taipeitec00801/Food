<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment.CommentActivity"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:name=".Settings.SettingsActivity"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingbutton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="center"
        android:src="@drawable/plus_positive_add_mathematical_symbol"
        app:rippleColor="#3CB371" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/colorBackground"
            android:orientation="vertical">

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/roll_view_pager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:transitionName="@string/map_transition_string"
                />
            <TextView
                android:id="@+id/tv_store_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店名:忠貞小館"
                android:textSize="28sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:transitionName="@string/map_storeInfo_name" />
        </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearlayout_introduce"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/cardview_background_color"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_store_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:text="營業時間：11:00-22:00;連絡電話:02-23389881"
                    android:transitionName="@string/map_storeInfo_name" />

                <TextView
                    android:id="@+id/tv_store_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="連絡電話:02-23389881"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:transitionName="@string/map_storeInfo_name" />

                <TextView
                    android:id="@+id/tv_store_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:text="地址：台北市大安區新生南路一段103-2號"
                    android:transitionName="@string/map_storeInfo_name" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:text="分享店家資訊"-->
                    <!--android:background="@drawable/button_rounde"-->
                    <!--/>-->
                    <!--<Button-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="0.5"-->
                        <!--android:text="店家詳細地圖"-->
                        <!--android:background="@drawable/button_rounde"-->
                        <!--/>-->

                </LinearLayout>
            </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/Comment_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>

