<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sort_item_cv"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/sort_item_cvUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sort_item_ivLeft"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/sort_item_tvRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:paddingTop="28dp"
                    android:text="中式"
                    android:textSize="50dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/sort_item_cvDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sort_item_tvLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="28dp"
                    android:text="西式"
                    android:textSize="50dp" />

                <ImageView
                    android:id="@+id/sort_item_ivRight"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher_round" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>
