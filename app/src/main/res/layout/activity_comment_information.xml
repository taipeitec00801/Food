<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Comment.Information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <!--<ScrollView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="match_parent"></ScrollView>-->
    <include
        android:id="@+id/settingsPreferencesToolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsPreferencesToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imageboy"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/boy" />

            <TextView
                android:id="@+id/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Medium Text"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                android:text="Small Text" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linearlayout"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/food" />
        <!--android:drawableRight=""-->
        <!--都用一個一個textview-->
        <TextView
            android:id="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店名:好吃嘎哩"/>
        <TextView
            android:id="@+id/tvaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址：104台北市中山區中山北路二段52號"/>
        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="開放時間： 營業中 ⋅ 結束營業時間：22:00"/>
        <TextView
            android:id="@+id/tvtel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="連絡電話:02-22689881"/>
        <TextView
            android:id="@+id/tvmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="餐廳介紹"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/tpv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:bgColor="@color/colorAccent"
                app:cracksColor="#33475f"
                app:edgeColor="#9d55b8"
                app:fillColor="#ea8010"
                app:unlikeType="1"
                />

            <TextView
                android:id="@+id/tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="89"
                android:textSize="25sp"/>


        </LinearLayout>

        <Button
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="160dp"
            android:onClick="like"
            android:text="like"
            android:background="@drawable/button_rounde"
            tools:ignore="OnClick"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="留言" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="GO"
            android:background="@drawable/button_rounde"
            />
    </LinearLayout>

    <!--還沒顯示出來 recycleview scrollview-->
</LinearLayout>