<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="340dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="7dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFDEAD">


        <ImageView
            android:id="@+id/search_item_bgImg"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/res01"/>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/search_item_ripple"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:mrl_rippleColor="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/search_item_resName"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="八方雲集"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/search_item_resSort"
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="中式餐廳"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#704214">

                <TextView
                    android:id="@+id/search_item_mapBt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="地圖定位"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/search_item_leftImg"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food1"/>
                    <ImageView
                        android:id="@+id/search_item_midImg"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food2"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"/>
                    <ImageView
                        android:id="@+id/search_item_rightImg"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food3"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_item_circleImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            android:src="@drawable/cf"/>
    </FrameLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
