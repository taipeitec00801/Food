<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="12dp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/sortAs_item_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mrl_rippleColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <!--黑線左邊佔總寬度75%-->
            <LinearLayout
                android:layout_weight="0.75"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/sortAs_item_iv"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/p01"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/sortAs_item_tv"
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="zasa"
                    android:textSize="30dp"
                    android:background="@android:color/transparent"/>

                <!--黑線右邊佔總寬度25%-->
                <LinearLayout
                    android:id="@+id/sortAs_item_mapBt"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <!--ImageButton高度佔60%-->
                    <ImageView
                        android:id="@+id/sortAs_item_ibt"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="3dp"
                        android:background="#fff"
                        android:src="@drawable/mk1"/>
                    <!--LinearLayout高度佔40%-->
                    <LinearLayout
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff"
                        android:layout_marginLeft="3dp">
                        <!--ImageView寬度佔50%-->
                        <ImageView
                            android:id="@+id/sortAs_item_like_iv"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/like"
                            android:background="@android:color/transparent"/>
                        <!--TextView寬度佔50%-->
                        <TextView
                            android:id="@+id/sortAs_item_like_tv"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:textSize="18dp"
                            android:text="999"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>