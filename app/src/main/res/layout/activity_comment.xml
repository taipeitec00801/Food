<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment.CommentActivity"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <!--drawlayout沒有顯示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorBackground"
            android:layout_gravity="center">
            <!--<include-->
            <!--android:id="@+id/settingsPreferencesToolbar"-->
            <!--layout="@layout/toolbar" />-->

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">
                <ImageView
                    android:id="@+id/Im"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food2" />


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="店名:好吃好吃"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址：104台北市中山區中山北路二段52號"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/GOTOMap"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="營業時間：11:00-22:00"/>
            <TextView
                android:id="@+id/tvtel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="連絡電話:02-23389881"/>
        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/Comment_recycleview"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
